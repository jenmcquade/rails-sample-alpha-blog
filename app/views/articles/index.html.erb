<div class="container center title">
  <h1>Listing Articles</h1>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to 'Show', article_path(article), class: 'btn btn-success' %></td>
    <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Delete', article_path(article),
            class: 'btn btn-danger',
            method: :delete,
            data: { confirm: "Are you sure want want to delete \"#{article.title}?\"" } %></td>
  </tr>
  <% end %>
</table>
<br>
<%= link_to 'New article', new_article_path, class: 'btn btn-primary' %>